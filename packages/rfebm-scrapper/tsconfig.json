{
  "extends": "tsconfig/base.json",
  "include": ["src"],
  "exclude": ["dist", "build", "node_modules", ".turbo"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node", "bun-types"],
    "lib": ["ESNext", "dom"],
    "baseUrl": "src",
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
