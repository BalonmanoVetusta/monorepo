{
  "extends": "tsconfig/nextjs.json",
  "displayName": "NextJS Web",
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "public/*": ["../public/*"],
      "pages/*": ["../pages/*"],
      "assets/*": ["../assets/*"],
      "styles/*": ["../styles/*"],
      "tests/*": ["../__tests__/*"],
      "mocks/*": ["../__mocks__/*"],
      "mockData/*": ["../mockData/*"],
      "config/*": ["../config/*"],
      "next.config": ["../next.config.js"]
    }
  },
  "include": [
    "src",
    "next-env.d.ts",
    "src/**/*",
    "tests/**/*",
    "__tests__/**/*",
    "__mocks__/**/*",
    "config/**/*",
    "next.config.js",
    "assets/**/*",
    "styles/**/*",
    "pages/**/*"
  ],
  "exclude": [
    "node_modules", ".next", ".turbo"
  ]
}
