{
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "src",
    "paths": {
      "public/*": ["../public/*"],
      "pages/*": ["../pages/*"],
      "assets/*": ["../assets/*"],
      "styles/*": ["../styles/*"],
      "tests/*": ["../__tests__/*"],
      "mocks/*": ["../__mocks__/*"],
      "mockData/*": ["../mockData/*"],
      "config/*": ["../config/*"],
      "next.config": ["../next.config.js"]
    }
  },
  "exclude": ["node_modules", ".next", ".husky"],
  "include": [
    "src/**/*",
    "tests/**/*",
    "__tests__/**/*",
    "__mocks__/**/*",
    "config/**/*",
    "next.config.js",
    "assets/**/*",
    "styles/**/*",
    "pages/**/*"
  ]
}
